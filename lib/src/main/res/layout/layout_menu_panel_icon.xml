<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_menu_panel_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/color_menu_panel_white"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/iv_menu_panel_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_menu_panel_normal_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/iv_menu_panel_icon"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/color_menu_panel_black" />

    <ImageView
        android:id="@+id/iv_menu_panel_normal_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_menu_panel_item_arrow" />

    <TextView
        android:id="@+id/tv_menu_panel_normal_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/iv_menu_panel_normal_arrow"
        android:layout_marginEnd="3dp"
        android:textSize="14sp"
        android:textColor="@color/color_menu_panel_gray" />
</RelativeLayout>