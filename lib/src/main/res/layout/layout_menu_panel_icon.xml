<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp"
    android:background="@color/color_menu_panel_white">

    <!-- 左侧 icon -->
    <ImageView
        android:id="@+id/iv_menu_panel_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_menu_panel_normal_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 菜单标题 -->
    <TextView
        android:id="@+id/tv_menu_panel_normal_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/color_menu_panel_black"
        android:gravity="start|center_vertical"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_menu_panel_icon"
        app:layout_constraintEnd_toStartOf="@id/tv_menu_panel_normal_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 右侧文字 -->
    <TextView
        android:id="@+id/tv_menu_panel_normal_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:gravity="end|center_vertical"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/color_menu_panel_gray"
        app:layout_constraintStart_toEndOf="@id/tv_menu_panel_normal_menu"
        app:layout_constraintEnd_toStartOf="@id/iv_menu_panel_normal_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 右侧箭头 -->
    <ImageView
        android:id="@+id/iv_menu_panel_normal_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_menu_panel_item_arrow"
        app:layout_constraintStart_toEndOf="@id/tv_menu_panel_normal_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
